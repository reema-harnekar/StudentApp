CREATE DATABASE StudentApp

CREATE TABLE StudentApp(ROLL_NO VARCHAR(6) PRIMARY KEY, NAME VARCHAR(100) NOT NULL, EMAIL VARCHAR(320) NOT NULL UNIQUE, PASSWORD VARCHAR(100) NOT NULL, STANDARD INT NOT NULL, REGISTER_DATE TIMESTAMP DEFAULT CURRENT_TIMESTAMP);

CREATE TABLE Grades(ROLLNO VARCHAR(6), STANDARD INT NOT NULL,GRADE VARCHAR(3) NOT NULL, REMARK VARCHAR(10) NOT NULL, PERCENTAGE INT NOT NULL, FOREIGN KEY(ROLLNO) REFERENCES StudentApp(ROLL_NO));
